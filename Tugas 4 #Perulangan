public class BilanganGenap {
    public static void main(String[] args) {
        System.out.println("Bilangan genap antara 1 sampai 100:");
        
        // Menggunakan pengecekan modulus
        for (int i = 1; i <= 100; i++) {
            if (i % 2 == 0) {
                System.out.print(i + " ");
            }
        }
        
        // Atau cara lebih efisien
        // for (int i = 2; i <= 100; i += 2) {
        //     System.out.print(i + " ");
        // }
    }
}
